<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Objetos.aeropuerto" table="aeropuerto">
        <id name="id_aeropuerto" column="ID">
            <generator class="identity" />
        </id>
        <property name="nombre" column="NOMBRE" />
        <property name="ciudad" column="CIUDAD" />
        <property name="codigoInternacional" column="CODIGOINTERNACIONAL" />
        <property name="costeDelHandling" column="COSTEDELHANDLING" />   
    </class>
</hibernate-mapping>